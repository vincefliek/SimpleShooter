body {
    height: 100vh;
    margin: 0;
    background: url("../img/bg.jpg") no-repeat center;
    background-size: cover;
}

.beginBlock,
.endBlock {
    z-index: 1200;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, .9);
    text-align: center;
}

.beginBlock__header {
    margin: 100px 0 0 0;
}

.beginBlock__images-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0;
}

.beginBlock__image {
    width: 25%;
    max-width: 300px;
    height: 300px;
    padding: 20px;
    display: inline-block;
    line-height: 250px;
    cursor: pointer;
    border: 2px dotted transparent;
    opacity: .5;
    transition: opacity .3s;
}

@media (max-height: 800px) {
    .beginBlock__images-container {
        max-width: 1000px;
    }

    .beginBlock__image {
        height: 200px;
        line-height: 150px;
    }
}

.beginBlock__image:hover {
    opacity: 1;
    border: 2px dotted #000;
}

.beginBlock__image img {
    max-width: 100%;
    max-height: 100%;
}

.endBlock {
    padding: 30vh 0 0 0;
}

.endBlock__score {
    color: brown;
    font-size: 3em;
    font-weight: 600;
}

.time {
    position: absolute;
    top: 5%;
    left: 5%;
    width: 15%;
    height: 100px;
    background: url("../img/timer_bg.jpg") no-repeat center;
    background-size: contain;
    text-align: center;
}

.time__numbers {
    padding: 31px 0;
    display: inline-block;
    color: #fff;
    font-size: 2em;
    font-weight: 600;
}

.target-area {
    z-index: 50;
    position: relative;
    top: 5%;
    width: 55%;
    height: 60%;
    margin: 0 0 0 20%;
    cursor: url('../img/sniper_target.png') 40 40, pointer;
}

.target-wrapper {
    z-index: 55;
    position: absolute;
    top: 1%;
    left: 25%;
    width: 120px;
    height: 120px;
    /*background-image: url("../img/terr1.png");*/
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
}

.target {
    width: 40px;
    height: 40px;
    margin-top: 20px;
    margin-left: 40px;
    display: inline-block;
    border-radius: 50%;
    opacity: .4;
    background-color: orangered;
}

.weapon {
    z-index: 40;
    position: fixed;
    bottom: 0;
    right: 100px;
    width: 400px;
}

.weapon img {
    max-width: 100%;
    height: auto;
    display: block;
}

.weapon .weapon__item {
    display: none;
}

.weapon .weapon__item.active {
    display: block;
}

.js-push-weapon {
    animation: moveWeapon .25s ease-in-out;
}

.weapon .fire {
    margin-bottom: -180px;
    margin-left: -20px;
    visibility: hidden;
}

.fire[data-fire="weapon-fire-0"] {
    margin-bottom: -180px;
    margin-left: -20px;
}

.fire[data-fire="weapon-fire-1"] {
    margin-bottom: -215px;
    margin-left: -80px;
}

.fire[data-fire="weapon-fire-2"] {
    margin-bottom: -215px;
    margin-left: -80px;
}

.fire[data-fire="weapon-fire-3"] {
    margin-bottom: -150px;
    margin-left: -112px;
}

.fire[data-fire="weapon-fire-4"] {
    margin-bottom: -215px;
    margin-left: -30px;
}

.fire[data-fire="weapon-fire-5"] {
    margin-bottom: -150px;
    margin-left: -40px;
}

.fire[data-fire="weapon-fire-6"] {
    margin-bottom: -215px;
    margin-left: -140px;
}

.fire[data-fire="weapon-fire-7"] {
    margin-bottom: -180px;
    margin-left: -45px;
}

.js-show-fire {
    animation: animFire .25s ease-in-out;
}

@keyframes animFire {
    0% { visibility: hidden; }
    50% { visibility: visible; }
    100% { visibility: hidden; }
}

@keyframes moveWeapon {
    0% { margin-bottom:0; margin-left:0; }
    50% { margin-bottom: -20px; margin-left: 20px; }
    100% { margin-bottom:0; margin-left:0; }
}